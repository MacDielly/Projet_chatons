<div id="<%= dom_id item %>">
  <p>
    <strong>Name:</strong>
    <%= item.name %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= item.price %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= item.description %>
  </p>

  <p>
    <strong>Image url:</strong>
    <%= item.image_url %>
  </p>

  <p>
      <%= link_to "Show this item", item_path(item) %>
    </p>

</div>
