<p style="color: green"><%= notice %></p>
<div class="col-sm-4">
<%= render partial: "item", layout: "shared/card_layout", locals: { item: @item }  %>
<div class="d-flex justify-content-center">
  <%= link_to "Edit this item", edit_item_path(@item), class: "btn btn-warning mr-5" %> 
  <%= button_to "Destroy this item", @item, method: :delete, class: "btn btn-danger ml-2" %> 
</div>
<div class="d-flex justify-content-center">
<%= link_to "Back to items", items_path, class: "btn btn-primary" %>
</div>
</div>

